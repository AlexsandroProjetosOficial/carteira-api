	"paths": {
		"/userAccounts/create": {
			"post": {
				"summary": "Create an user.",
				"description": "This route is responsible for register an user",
				"tags": [
					"Users"
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/UserCreate"
							},
							"examples": {
								"user": {
									"value": {
										"firstName": "Jo√£o",
										"lastName": "Carlo da Silva",
										"email": "joao@gmail.com",
										"password": "W51c+@53",
										"virtualAccountName": "JoaoFamily"
									}
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Created",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								},
								"example": {
									"success": true,
									"message": "User has been created successfully."
								}
							}
						}
					},
					"400": {
						"description": "Bad Request.",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								},
								"examples": {
									"user": {
										"value": {
											"error": "User already exist."
										}
									},
									"virtual account": {
										"value": {
											"error": "Virtual account already exist."
										}
									}
								}
							}
						}
					},
					"500": {
						"description": "Internal Server Error.",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								},
								"example": {
									"message": "Internal Server Error. - Custom message"
								}
							}
						}
					}
				}
			}
		},
		"/systems/login": {
			"post": {
				"summary": "Authentication an user.",
				"description": "This route is responsible for authenticate an user",
				"tags": [
					"Systems"
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/systemAuthenticate"
							},
							"examples": {
								"user": {
									"value": {
										"email": "joao@gmail.com",
										"password": "W51c+@53"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Ok",
						"headers": {
							"hp": {
								"description": "Cookies for validation in our API",
								"schema": {
									"type": "string"
								}
							},
							"sg": {
								"description": "Cookies for validation in our API",
								"schema": {
									"type": "string"
								}
							}
						},
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								},
								"example": {
									"success": true,
									"message": "User has been logged successfully."
								}
							}
						}
					},
					"400": {
						"description": "Bad Request.",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								},
								"example": {
									"error": "E-mail or password incorrect.."
								}
							}
						}
					},
					"500": {
						"description": "Internal Server Error.",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								},
								"example": {
									"message": "Internal Server Error. - Custom message"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"UserCreate": {
				"type": "object",
				"properties": {
					"firstName": {
						"type": "string"
					},
					"lastName": {
						"type": "string"
					},
					"email": {
						"type": "string"
					},
					"password": {
						"type": "string"
					},
					"virtualAccountName": {
						"type": "string"
					}
				}
			},
			"systemAuthenticate": {
				"type": "object",
				"properties": {
					"email": {
						"type": "string"
					},
					"password": {
						"type": "string"
					}
				}
			}
		},
		"securitySchemes": {
			"cookieAuth": {
				"hp": {
					"type": "string",
					"in": "cookie",
					"name": "hp"
				},
				"sg": {
					"type": "string",
					"in": "cookie",
					"name": "sg"
				}
			}
		}
	}
}